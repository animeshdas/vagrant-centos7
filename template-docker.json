{
  "builders": [
    {
      "type": "docker",
      "image": "centos:7.2.1511",
      "export_path": "builds/centos7-x64-{{.Provider}}.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | sudo -S sh '{{.Path}}'",
      "override": {
        "docker": {
          "scripts": [
            "scripts/base.sh",
            "scripts/configs.sh",
            "scripts/packages.sh",
            "scripts/cleanup.sh"
          ]
        }
      }
    }
  ]
}
